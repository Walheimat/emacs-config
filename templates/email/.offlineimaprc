# This file needs to be in your home folder.

[general]
accounts = Gmail
maxsyncaccounts = 3

[Account Gmail]
localrepository = GmailLocal
remoterepository = GmailRemote

[Repository GmailLocal]
type = Maildir
localfolders = ~/Maildir # Or another directory.

[Repository GmailRemote]
type = IMAP
remotehost = imap.gmail.com
remoteuser = email@gmail.com # Set to your email address.
remotepass = password # Generate app password.
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt # Might be at a different location.
maxconnections = 1
